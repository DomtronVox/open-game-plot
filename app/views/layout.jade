doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.3.3.7.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.3.3.7.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascript/jquery-3.2.1.min.js')
    script(src='/javascript/bootstrap.3.3.7.min.js')
    
    block head

  body
    nav.navbar.navbar-default
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') OpenGamePlot
        div.collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/search') Search
            li
              a(href='/submit') Submit Content
            if (!user)
              li
                a(href='/login') Login
              li
                a(href='/register') Register
            if (user)
              li
                a(href='/users') Welcome #{user.username}
              li
                a(href='/logout') Logout

    div.container
      div#content
        block content



